{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": [
      "ES2019"
    ],
    "target": "ES2017",
    "module": "CommonJS",
    "strict": true,
    "outDir": "./dist",
    "noErrorTruncation": true,
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@fn/*": [
        "./src/fn/*"
      ],
      "@type/*": [
        "./src/type/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  }
}
